<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="form-card">
        <form action="/listings/<%=listing._id%>?_method=PUT" novalidate method="post" class="needs-validation">
        Edit Title
        <input type="text" value="<%=listing.title%>" name="title" required class="form-control">
        <div class="invalid-feedback">Title is required</div>
        Edit description
        <br>
        <textarea name="description" id="description" required class="form-control"><%=listing.description  %></textarea>
        edit price
        <input type="text" placeholder="&#8377;<%=listing.price  %>" name="price" required class="form-control"> 
        <img src="<%=listing.image.url%>" alt="<%=listing.image.filename%>"> 
        <h1>new image option coming soon</h1>
        <button>submit</button>
        </form>

        <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
            <button>delete</button>

        </form>


    </div>
</body>
